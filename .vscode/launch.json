{
    "version": "0.2.0",
    "configurations": [
        // Depuración de Python
        {
            "name": "Python: Archivo actual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // Depuración de C++
        {
            "name": "C++: Lanzar Archivo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // O 'lldb' en macOS
            "setupCommands": [
                {
                    "description": "Habilitar pretty-printing para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: compilación activa", // Nombre de tu tarea en tasks.json
            "miDebuggerPath": "/usr/bin/gdb", // Ruta al depurador
        }
    ]
}
